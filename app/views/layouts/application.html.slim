doctype html
html
  head
  title Table View Methodis Worship
  = stylesheet_link_tag "application", :media => "all"
  = javascript_include_tag "application"
  meta name="viewport" content="width=device-width, initial-scale=1.0"
  = csrf_meta_tags
body
  div.navbar.navbar-static-top
    div.navbar-inner
      = link_to "Table View Methodist Worship", root_url, :class => 'brand'
      - if current_user
        ul.nav
          li
            = link_to "Songs", songs_url
          - if current_user.worship_leader?
            li
              = link_to "Sets", song_sets_url
      ul.nav.pull-right
        - if current_user
          li
            p.navbar-text
              | Logged in as #{current_user.username}
          li
            = link_to "Logout", :logout
        - else
          li
            = link_to "Login", :login
        li
          - if current_song_set
            p.navbar-text
              | Current Set:
              strong
                = link_to " #{current_song_set.name}", current_song_set
                = link_to current_song_set do
                   i.icon-remove-circle
  div.container
    div.row
      - if flash[:error]
        div.alert.alert-error
          = flash[:error]
      - if flash[:notice]
        div.alert.alert-success
          = flash[:notice]
      div.span12
        = yield
